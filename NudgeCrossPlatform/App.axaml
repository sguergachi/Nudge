<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NudgeTray.App">

    <!-- TrayIcon with NO menu - let Windows handle right-click natively -->
    <!-- Both left and right click will trigger Clicked event -->
    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon ToolTipText="Nudge Productivity Tracker (Click for menu)"
                      Clicked="TrayIcon_Clicked" />
        </TrayIcons>
    </TrayIcon.Icons>

</Application>
