<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NudgeTray.App">

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon ToolTipText="Nudge Productivity Tracker">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Status: Running" />
                        <NativeMenuItemSeparator />
                        <NativeMenuItem Header="Quit" Click="QuitMenuItem_Click" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>

</Application>
